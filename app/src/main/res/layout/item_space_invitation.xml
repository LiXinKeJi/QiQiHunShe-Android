<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="4dp"
        android:layout_margin="12dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_bg"
            android:paddingTop="12dp"
            android:paddingBottom="2dp"
    >

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_psersonnum"
                  android:text="当前报名人数：1人  1人待审核  2人拒绝"
                  android:textColor="@color/colorTheme"
                  android:textSize="13sp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginLeft="15dp"
                  android:layout_marginStart="15dp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/tv_zhui"
                  android:text="主题："
                  android:textSize="15sp"
                  android:textColor="@color/colorTabTexts"
                  android:maxLines="3"
                  android:ellipsize="end"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/tv_psersonnum"
                  android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="15dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="15dp" android:layout_marginStart="15dp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/tv_time"
                  android:text="活动时间："
                  android:textSize="15sp"
                  android:textColor="@color/colorTabTexts"
                  android:maxLines="3"
                  android:ellipsize="end"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/tv_zhui"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="15dp" android:layout_marginStart="15dp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/tv_content"
                  android:text="活动内容："
                  android:textSize="15sp"
                  android:textColor="@color/colorTabTexts"
                  android:maxLines="3"
                  android:ellipsize="end"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/tv_time"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="15dp" android:layout_marginLeft="15dp"
                  android:layout_marginStart="15dp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/tv_range"
                  android:text="限制范围："
                  android:textSize="15sp"
                  android:textColor="@color/colorTabTexts"
                  android:maxLines="3"
                  android:ellipsize="end"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/tv_address"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="15dp" android:layout_marginLeft="15dp"
                  android:layout_marginStart="15dp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/tv_limit"
                  android:text="仅限："
                  android:textSize="15sp"
                  android:textColor="@color/colorTabTexts"
                  android:maxLines="3"
                  android:ellipsize="end"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/tv_range"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="15dp" android:layout_marginLeft="15dp"
                  android:layout_marginStart="15dp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/tv_consu"
                  android:text="消费："
                  android:textSize="15sp"
                  android:textColor="@color/colorTabTexts"
                  android:maxLines="3"
                  android:ellipsize="end"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/tv_limit"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="15dp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/tv_address"
                  android:text="活动地点："
                  android:textSize="15sp"
                  android:textColor="@color/colorTabTexts"
                  android:maxLines="3"
                  android:ellipsize="end"
                  android:layout_marginTop="10dp"
                  app:layout_constraintTop_toBottomOf="@+id/tv_content"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="15dp" android:layout_marginLeft="15dp"
                  android:layout_marginStart="15dp"/>


        <com.lxkj.runproject.app.view.SquareImage
                android:id="@+id/iv_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_consu"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="6dp"
                android:src="@mipmap/ic_launcher"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/iv_2"/>

        <com.lxkj.runproject.app.view.SquareImage
                android:id="@+id/iv_2"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_consu"
                android:layout_marginTop="15dp"
                android:src="@mipmap/ic_launcher"
                android:layout_weight="1"
                app:layout_constraintStart_toEndOf="@+id/iv_1"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/iv_3"/>

        <com.lxkj.runproject.app.view.SquareImage
                android:id="@+id/iv_3"
                android:layout_width="0dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/tv_consu"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toEndOf="@+id/iv_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_num"
                  android:textSize="15sp"
                  android:textColor="@color/colorRateRed"
                  android:text="+1"
                  android:visibility="gone"
                  app:layout_constraintEnd_toEndOf="@+id/iv_3"
                  app:layout_constraintStart_toStartOf="@+id/iv_3"
                  app:layout_constraintBottom_toBottomOf="@+id/iv_3" app:layout_constraintTop_toTopOf="@+id/iv_3"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_date"
                  android:textColor="@color/colorSubtitle"
                  android:textSize="11sp"
                  android:text="2019"
                  app:layout_constraintTop_toBottomOf="@+id/iv_1"
                  android:layout_marginTop="10dp"
                  android:paddingBottom="10dp"
                  android:layout_marginRight="15dp"
                  app:layout_constraintEnd_toEndOf="parent"
        />


        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/iv_del"
                   android:src="@drawable/ic_dian3"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:paddingLeft="10dp"
                   android:paddingRight="10dp"
                   android:background="@drawable/touch_bg"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginRight="15dp"
                   app:layout_constraintTop_toTopOf="parent"/>


        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:id="@+id/cv_del"
                android:visibility="gone"
                app:cardElevation="3dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_del" app:layout_constraintEnd_toEndOf="@+id/iv_del"
                app:layout_constraintStart_toStartOf="@+id/iv_del">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_del"
                      android:text="删除"
                      android:textSize="11sp"
                      android:textColor="@color/colorTabText"
                      android:paddingTop="3dp"
                      android:background="@drawable/touch_bg"
                      android:paddingBottom="3dp"
                      android:paddingRight="6dp"
                      android:paddingLeft="6dp"
            />

        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>