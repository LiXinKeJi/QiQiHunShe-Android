<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp">

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/image"
                   android:src="@drawable/ic_dun"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"/>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_renzheng"
                  android:text="下边来完善资料及其他实名认证吧"
                  android:textSize="16sp"
                  android:textColor="@color/colorTabTexts"
                  android:layout_marginTop="20dp"
                  app:layout_constraintTop_toBottomOf="@+id/image" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/tv_go"
                  android:text="前去认证"
                  android:padding="12dp"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:textColor="@color/white"
                  android:background="@drawable/jbshape"
                  android:layout_marginTop="35dp"
                  app:layout_constraintTop_toBottomOf="@+id/tv_renzheng" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="30dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>