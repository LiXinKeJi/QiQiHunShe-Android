<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <!--消息详情-->
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

            <include
                    layout="@layout/include_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/include"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_type"
                      android:text="通知类型"
                      android:textSize="15sp"
                      android:textColor="@color/colorTabText"
                      android:layout_marginLeft="30dp"
                      android:layout_marginTop="15dp"
            />


            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/tv_content"
                      android:text="通知内容"
                      android:textSize="15sp"
                      android:textColor="@color/colorTabText"
                      android:layout_marginLeft="30dp"
                      android:layout_marginTop="12dp"
                      android:layout_marginRight="30dp"
            />


            <android.support.constraint.ConstraintLayout
                    android:id="@+id/vl_singup"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="30dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_title"
                          android:text="主题："
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>


                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/time"
                          android:text="活动时间："
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          android:layout_marginTop="10dp"
                          app:layout_constraintTop_toBottomOf="@+id/tv_title"
                          app:layout_constraintStart_toStartOf="parent"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_time"
                          android:text="2019-201.2:"
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toEndOf="@+id/time" android:layout_marginStart="8dp"
                          android:layout_marginLeft="8dp" app:layout_constraintBottom_toBottomOf="@+id/time"
                          app:layout_constraintTop_toTopOf="@+id/time"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/contents"
                          android:text="活动内容："
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          android:layout_marginTop="10dp"
                          app:layout_constraintTop_toBottomOf="@+id/time"
                          app:layout_constraintStart_toStartOf="parent"/>

                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:id="@+id/tv_contents"
                          android:text="活动内容活动内容活动内容活动内容活动内容活动内容活动内容活动内容"
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintTop_toTopOf="@+id/contents"
                          app:layout_constraintStart_toEndOf="@+id/contents" android:layout_marginStart="8dp"
                          android:layout_marginLeft="8dp" app:layout_constraintEnd_toEndOf="parent"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/address"
                          android:text="活动地点:"
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
                          app:layout_constraintTop_toBottomOf="@+id/tv_contents"
                />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_address"
                          android:text="活动地点"
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toEndOf="@+id/address" android:layout_marginStart="8dp"
                          android:layout_marginLeft="8dp"
                          app:layout_constraintTop_toTopOf="@+id/address"/>


                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/fanwei"
                          android:text="限制范围："
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toStartOf="parent"
                          android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/address"/>


                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_fanwei"
                          android:text="限制范围限制范围限制范围"
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toEndOf="@+id/fanwei" android:layout_marginStart="8dp"
                          android:layout_marginLeft="8dp"
                          app:layout_constraintTop_toTopOf="@+id/fanwei"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/limited"
                          android:text="仅限："
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toStartOf="parent"
                          android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/tv_fanwei"/>


                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_limited"
                          android:text="仅限性别"
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toEndOf="@+id/limited" android:layout_marginStart="8dp"
                          android:layout_marginLeft="8dp"
                          app:layout_constraintTop_toTopOf="@+id/limited"/>


                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/consumption"
                          android:text="消费："
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toStartOf="parent"
                          android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/limited"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_consumption"
                          android:text="200"
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toEndOf="@+id/consumption" android:layout_marginStart="8dp"
                          android:layout_marginLeft="8dp"
                          app:layout_constraintTop_toTopOf="@+id/consumption"/>


                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/person"
                          android:text="联系人："
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toStartOf="parent"
                          android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/tv_consumption"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_person"
                          android:text="先生/女士"
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toEndOf="@+id/person" android:layout_marginStart="8dp"
                          android:layout_marginLeft="8dp"
                          app:layout_constraintTop_toTopOf="@+id/person"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/phone"
                          android:text="联系电话："
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toStartOf="parent"
                          android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/tv_person"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_phone"
                          android:text=" "
                          android:textSize="13sp"
                          android:textColor="@color/colorSubtitle"
                          app:layout_constraintStart_toEndOf="@+id/phone" android:layout_marginStart="8dp"
                          android:layout_marginLeft="8dp"
                          app:layout_constraintTop_toTopOf="@+id/phone"/>


            </android.support.constraint.ConstraintLayout>


        </LinearLayout>

    </ScrollView>


</layout>

