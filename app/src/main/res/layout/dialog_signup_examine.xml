<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp">


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/title"
                  android:text="提示"
                  android:textSize="16sp"
                  android:textColor="@color/black"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
        />

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/iv_cancel"
                   android:src="@drawable/ic_cha"
                   android:paddingLeft="10dp"
                   android:paddingBottom="10dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
        />


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="是否同意参加活动"
                  android:textColor="@color/colorTabText"
                  android:textSize="15sp"
                  android:layout_marginTop="25dp"
                  app:layout_constraintStart_toStartOf="parent"
                  android:id="@+id/tv_tip"
                  app:layout_constraintTop_toBottomOf="@+id/iv_cancel"/>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_no"
                  android:text="拒绝"
                  android:layout_gravity="center_horizontal"
                  android:textSize="14sp"
                  android:background="@drawable/bg_gray_5"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:textColor="@color/colorTabTexts"
                  android:paddingTop="12dp"
                  android:paddingBottom="12dp"
                  android:paddingLeft="35dp"
                  android:paddingRight="35dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginBottom="15dp" app:layout_constraintTop_toBottomOf="@+id/tv_tip"
                  android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/tv_agree"/>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_agree"
                  android:text="同意"
                  android:layout_gravity="center_horizontal"
                  android:textSize="14sp"
                  android:background="@drawable/button_click5"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:textColor="@color/white"
                  android:paddingTop="12dp"
                  android:paddingBottom="12dp"
                  android:paddingLeft="35dp"
                  android:paddingRight="35dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginBottom="15dp" app:layout_constraintTop_toBottomOf="@+id/tv_tip"
                  android:layout_marginTop="32dp"
                  app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/tv_no"
                  app:layout_constraintHorizontal_bias="0.5"/>


    </android.support.constraint.ConstraintLayout>


</FrameLayout>