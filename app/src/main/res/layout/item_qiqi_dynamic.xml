<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_bg"
            android:paddingTop="12dp">

        <ImageView android:layout_width="90dp" android:layout_height="80dp"
                   android:id="@+id/image_view"
                   android:src="@mipmap/ic_launcher"
                   android:scaleType="centerCrop"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginLeft="15dp"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_title"
                  android:textColor="@color/black"
                  android:text="标题"
                  android:textSize="15sp" android:layout_marginTop="6dp"
                  app:layout_constraintTop_toTopOf="@+id/image_view"
                  app:layout_constraintStart_toEndOf="@+id/image_view"
                  android:layout_marginLeft="15dp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/tv_content"
                  android:textColor="@color/colorTabText"
                  android:text="标题标题标题标题标 标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
                  android:textSize="13sp"
                  android:maxLines="2"
                  android:ellipsize="end"
                  app:layout_constraintStart_toEndOf="@+id/image_view"
                  android:layout_marginLeft="15dp" android:layout_marginBottom="6dp"
                  app:layout_constraintBottom_toBottomOf="@+id/image_view"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="15dp"/>

        <include layout="@layout/include_line07"
                 android:id="@+id/line"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="12dp"
                 app:layout_constraintTop_toBottomOf="@+id/image_view"/>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>