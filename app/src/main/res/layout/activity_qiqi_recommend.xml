<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewmodel" type="com.lxkj.qiqihunshe.app.ui.mine.viewmodel.QiQiRecommendViewModel"/>
    </data>

    <!--七七推荐-->

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fitsSystemWindows="true">

        <include
                layout="@layout/include_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/include"/>

        <include layout="@layout/include_tabviewpager"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 app:layout_constraintTop_toBottomOf="@+id/include"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent" android:id="@+id/include2"/>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content"
                      app:layout_constraintTop_toTopOf="@+id/include2"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout android:layout_width="wrap_content"
                         android:layout_weight="1"
                         android:layout_height="wrap_content">
                <cn.bingoogolapple.badgeview.BGABadgeTextView
                        android:id="@+id/tv_msgNum1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:text="21"
                        android:layout_gravity="right"
                        android:minHeight="18dp"
                        android:minWidth="25dp"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                />

            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content"
                         android:layout_weight="1"
                         android:layout_height="wrap_content">
                <cn.bingoogolapple.badgeview.BGABadgeTextView
                        android:id="@+id/tv_msgNum2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:text="21"
                        android:layout_gravity="right"
                        android:minHeight="18dp"
                        android:minWidth="25dp"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                />

            </FrameLayout>
            <FrameLayout android:layout_width="wrap_content"
                         android:layout_weight="1"
                         android:layout_height="wrap_content">
                <cn.bingoogolapple.badgeview.BGABadgeTextView
                        android:id="@+id/tv_msgNum3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:text="21"
                        android:layout_gravity="right"
                        android:minHeight="18dp"
                        android:minWidth="25dp"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                />

            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content"
                         android:layout_weight="1"
                         android:layout_height="wrap_content">
                <cn.bingoogolapple.badgeview.BGABadgeTextView
                        android:id="@+id/tv_msgNum4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="21"
                        android:layout_gravity="right"
                        android:minHeight="18dp"
                        android:minWidth="25dp"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                />

            </FrameLayout>


        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</layout>

