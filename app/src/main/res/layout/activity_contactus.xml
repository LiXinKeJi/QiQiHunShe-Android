<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model" type="com.lxkj.qiqihunshe.app.ui.mine.model.ContactUsModel"/>
        <variable name="viewmodel" type="com.lxkj.qiqihunshe.app.ui.mine.viewmodel.ContactUsViewModel"/>
    </data>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:fitsSystemWindows="true">

        <include
                layout="@layout/include_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/include"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tel"
                      android:background="@drawable/touch_bg"
                      android:text="客服电话"
                      android:layout_centerVertical="true"
                      android:textColor="@color/colorTabText"
                      android:textSize="15sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_tel"
                      android:background="@drawable/touch_bg"
                      android:text="@{model.phone}"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:textColor="@color/colorSubtitle"
                      android:textSize="15sp"/>

        </RelativeLayout>

        <include layout="@layout/include_line07"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/name"
                      android:background="@drawable/touch_bg"
                      android:text="公司名称"
                      android:layout_centerVertical="true"
                      android:textColor="@color/colorTabText"
                      android:textSize="15sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_name"
                      android:background="@drawable/touch_bg"
                      android:text="@{model.name}"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:textColor="@color/colorSubtitle"
                      android:textSize="15sp"/>

        </RelativeLayout>

        <include layout="@layout/include_line07"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/address"
                      android:background="@drawable/touch_bg"
                      android:text="公司地址"
                      android:layout_centerVertical="true"
                      android:textColor="@color/colorTabText"
                      android:textSize="15sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_address"
                      android:background="@drawable/touch_bg"
                      android:text="@{model.address}"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:textColor="@color/colorSubtitle"
                      android:textSize="15sp"/>

        </RelativeLayout>

        <include layout="@layout/include_line07"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/mail"
                      android:background="@drawable/touch_bg"
                      android:text="公司邮箱"
                      android:layout_centerVertical="true"
                      android:textColor="@color/colorTabText"
                      android:textSize="15sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_mail"
                      android:background="@drawable/touch_bg"
                      android:text="@{model.mail}"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:textColor="@color/colorSubtitle"
                      android:textSize="15sp"/>

        </RelativeLayout>

        <include layout="@layout/include_line07"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/http"
                      android:background="@drawable/touch_bg"
                      android:text="公司官网"
                      android:layout_centerVertical="true"
                      android:textColor="@color/colorTabText"
                      android:textSize="15sp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_http"
                      android:background="@drawable/touch_bg"
                      android:text="@{model.http}"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:textColor="@color/colorSubtitle"
                      android:textSize="15sp"/>

        </RelativeLayout>

        <include layout="@layout/include_line07"/>


    </LinearLayout>

</layout>

