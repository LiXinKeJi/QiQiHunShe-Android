<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_bg"
    >

        <ImageView android:layout_width="wrap_content" android:layout_height="80dp"
                   android:id="@+id/tv_1"
                   android:src="@drawable/ic_line"
                   app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent" android:layout_marginLeft="15dp"
                   android:layout_marginStart="15dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_time"
                  android:text="2019-01.20"
                  android:textSize="13sp"
                  android:textColor="@color/colorTabText"
                  app:layout_constraintStart_toEndOf="@+id/tv_1" android:layout_marginStart="8dp"
                  android:layout_marginLeft="8dp"
                  app:layout_constraintTop_toTopOf="parent"/>

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/iv_del"
                   android:src="@drawable/ic_dian3"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:paddingLeft="10dp"
                   android:paddingRight="10dp"
                   android:background="@drawable/touch_bg"
                   app:layout_constraintBottom_toBottomOf="@+id/tv_time"
                   app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/tv_time"
                   android:layout_marginLeft="5dp" android:layout_marginStart="5dp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:id="@+id/tv_content"
                  android:textColor="@color/colorTabText"
                  android:text="内容内容内容内容 内容内容"
                  app:layout_constraintTop_toBottomOf="@+id/tv_time"
                  android:layout_marginTop="10dp"
                  app:layout_constraintStart_toStartOf="@+id/tv_time"
                  android:maxLines="3"
                  android:ellipsize="end"
                  app:layout_constraintEnd_toStartOf="@+id/iv_0"
                  android:layout_marginRight="8dp"/>

        <ImageView android:layout_width="31dp" android:layout_height="31dp"
                   android:id="@+id/iv_0"
                   android:src="@mipmap/ic_launcher"
                   android:layout_marginRight="47dp"
                   android:scaleType="centerCrop"
                   android:layout_marginBottom="1dp"
                   app:layout_constraintBottom_toTopOf="@+id/guideline"
                   app:layout_constraintEnd_toEndOf="parent"
        />

        <ImageView android:layout_width="31dp" android:layout_height="31dp"
                   android:id="@+id/iv_1"
                   android:layout_marginBottom="1dp"
                   android:scaleType="centerCrop"
                   android:src="@mipmap/ic_launcher"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="15dp" android:layout_marginRight="15dp"
                   app:layout_constraintBottom_toTopOf="@+id/guideline"/>

        <ImageView android:layout_width="31dp" android:layout_height="31dp"
                   android:id="@+id/iv_2"
                   android:src="@mipmap/ic_launcher"
                   android:scaleType="centerCrop"
                   android:layout_marginTop="1dp" app:layout_constraintTop_toTopOf="@+id/guideline"
                   app:layout_constraintEnd_toStartOf="@+id/iv_3" android:layout_marginEnd="1dp"
                   android:layout_marginRight="1dp"/>

        <ImageView android:layout_width="31dp" android:layout_height="31dp"
                   android:id="@+id/iv_3"
                   android:src="@mipmap/ic_launcher"
                   android:scaleType="centerCrop"
                   app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="1dp"
                   app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginEnd="15dp"
                   android:layout_marginRight="15dp"/>


        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline"
                                              app:layout_constraintGuide_percent="0.5"
                                              android:orientation="horizontal"/>


        <android.support.v7.widget.CardView
                android:id="@+id/cv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:visibility="gone"
                app:cardElevation="3dp" app:layout_constraintTop_toBottomOf="@+id/iv_del"
                app:layout_constraintEnd_toEndOf="@+id/iv_del"
                app:layout_constraintStart_toStartOf="@+id/iv_del">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_del"
                      android:text="删除"
                      android:textSize="11sp"
                      android:textColor="@color/colorTabText"
                      android:paddingTop="3dp"
                      android:background="@drawable/touch_bg"
                      android:paddingBottom="3dp"
                      android:paddingRight="6dp"
                      android:paddingLeft="6dp"
            />

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>


</FrameLayout>